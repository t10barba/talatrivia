{% extends 'admin/layout.html.twig' %}

{% block page_title %}Detalle de Trivia{% endblock %}

{% block content %}
    <div class="mb-3">
        <a href="{{ path('admin_trivia_index') }}" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Volver
        </a>
        <a href="{{ path('admin_trivia_edit', {id: trivia.id}) }}" class="btn btn-warning">
            <i class="fa fa-edit"></i> Editar
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">{{ trivia.id }}</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">{{ trivia.nombre }}</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">{{ trivia.descripcion }}</dd>

                <dt class="col-sm-3">Fecha de Creación:</dt>
                <dd class="col-sm-9">{{ trivia.createdAt ? trivia.createdAt|date('d/m/Y H:i:s') : '-' }}</dd>
            </dl>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0">Preguntas ({{ preguntas|length }})</h5>
        </div>
        <div class="card-body">
            {% if preguntas is empty %}
                <p class="text-muted">No hay preguntas asignadas a esta trivia.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 80px;">Orden</th>
                                <th style="width: 80px;">ID</th>
                                <th>Pregunta</th>
                                <th style="width: 120px;">Dificultad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pregunta in preguntas %}
                                <tr>
                                    <td><strong>{{ pregunta.orden }}</strong></td>
                                    <td>{{ pregunta.id }}</td>
                                    <td>{{ pregunta.texto }}</td>
                                    <td>
                                        {% if pregunta.dificultad == 1 %}
                                            <span class="badge bg-success">Fácil</span>
                                        {% elseif pregunta.dificultad == 2 %}
                                            <span class="badge bg-warning">Medio</span>
                                        {% else %}
                                            <span class="badge bg-danger">Difícil</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

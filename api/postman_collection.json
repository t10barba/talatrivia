				{
					"name": "1. Obtener primera Pregunta (TEST01 - No iniciado)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has preguntaId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('preguntaId');",
									"    pm.expect(jsonData).to.have.property('texto');",
									"    pm.expect(jsonData).to.have.property('respuestas');",
									"    pm.expect(jsonData).to.have.property('numeroPregunta');",
									"    pm.expect(jsonData).to.have.property('totalPreguntas');",
									"});",
									"",
									"pm.test(\"Has 3 respuestas\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.respuestas).to.be.an('array');",
									"    pm.expect(jsonData.respuestas.length).to.equal(3);",
									"});",
									"",
									"// Guardar primera respuestaId para siguiente request",
									"var jsonData = pm.response.json();",
									"if (jsonData.respuestas && jsonData.respuestas.length > 0) {",
									"    pm.collectionVariables.set(\"respuestaId\", jsonData.respuestas[0].id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
